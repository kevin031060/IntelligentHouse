<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.example.wireframe.utils.SeismicWaveView
            android:id="@+id/seismicwaveview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white" />

        <ImageButton
            android:id="@+id/newone1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/app_home_shortcuts_button_selector"
            android:src="@drawable/shortcuts_icon_promotion"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</LinearLayout>