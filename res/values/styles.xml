<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="android:Widget.Holo.Light.ActionBar">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style name="CustomStyle" parent="android:Theme.Holo.Light"
        >
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:actionBarStyle">@style/AppTheme1</item>
        <item name="android:actionBarSize">25dp</item>
        <item name="android:backgroundStacked">#00000000</item>

    </style>
    <style name="AppTheme1" parent="android:Widget.Holo.Light.ActionBar">
        <item name="android:background">#00000000</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="CustomStyle1" parent="android:Theme"
        >
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:actionBarStyle">@style/AppTheme2</item>

    </style>
    <style name="AppTheme2" parent="android:Theme">
        <item name="android:background">#70000000</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="top_group">
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@drawable/qq_constact_font</item>
        <item name="android:background">@drawable/qq_constact_group</item>
    </style>


</resources>